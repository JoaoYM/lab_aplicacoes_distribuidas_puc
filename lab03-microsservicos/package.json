{
  "name": "lista-compras-microservices",
  "version": "1.0.0",
  "description": "Sistema de lista de compras com microsservi√ßos",
  "main": "api-gateway/server.js",
  "scripts": {
    "start:gateway": "node api-gateway/server.js",
    "start:user": "node services/user-service/server.js",
    "start:item": "node services/item-service/server.js",
    "start:list": "node services/list-service/server.js",
    "start:all": "concurrently \"npm run start:user\" \"npm run start:item\" \"npm run start:list\" \"npm run start:gateway\"",
    
    "debug:gateway": "nodemon --inspect api-gateway/server.js",
    "debug:user": "nodemon --inspect services/user-service/server.js",
    "debug:item": "nodemon --inspect services/item-service/server.js",
    "debug:list": "nodemon --inspect services/list-service/server.js",
    "debug:all": "concurrently \"npm run debug:user\" \"npm run debug:item\" \"npm run debug:list\" \"npm run debug:gateway\"",
    
    "debug:ports:user": "nodemon --inspect=9229 services/user-service/server.js",
    "debug:ports:item": "nodemon --inspect=9230 services/item-service/server.js",
    "debug:ports:list": "nodemon --inspect=9231 services/list-service/server.js",
    "debug:ports:gateway": "nodemon --inspect=9232 api-gateway/server.js",
    "debug:ports:all": "concurrently \"npm run debug:ports:user\" \"npm run debug:ports:item\" \"npm run debug:ports:list\" \"npm run debug:ports:gateway\"",
    
    "start:demo": "node client-demo.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.0",
    "helmet": "^7.0.0",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "keywords": [
    "microservices",
    "shopping",
    "list",
    "api",
    "nosql"
  ],
  "author": "Seu Nome",
  "license": "MIT"
}
