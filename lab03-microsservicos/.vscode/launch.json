{
  "version": "0.2.0",
  "configurations": [
    // Suas configurações atuais (mantenha-as)
    {
      "name": "Debug User Service",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/services/user-service/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Item Service",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/services/item-service/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug List Service",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/services/list-service/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug API Gateway",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/api-gateway/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "Debug: All Services",
      "configurations": [
        "Debug User Service",
        "Debug Item Service", 
        "Debug List Service",
        "Debug API Gateway"
      ],
      "stopAll": true
    },
    {
      "name": "Debug: Core Services",
      "configurations": [
        "Debug User Service",
        "Debug Item Service",
        "Debug API Gateway"
      ],
      "stopAll": true
    }
  ]
}